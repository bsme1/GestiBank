<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:stretchColumns="0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="Deprecated">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="314dp"
        android:layout_height="126dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_x="45dp"
        android:layout_y="35dp"
        android:background="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="297dp"
        android:layout_height="75dp"
        android:layout_x="50dp"
        android:layout_y="155dp"
        android:gravity="center"
        android:text="Convertisseur de devises"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/devisec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="288dp"
        android:text="Devise " />

    <RadioGroup
        android:id="@+id/devise"
        android:layout_width="275dp"
        android:layout_height="79dp"
        android:layout_x="172dp"
        android:layout_y="255dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.229">

        <RadioButton
            android:id="@+id/deviseEur"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_x="173dp"
            android:layout_y="248dp"
            android:text="EUR" />

        <RadioButton
            android:id="@+id/deviseTnd"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_x="293dp"
            android:layout_y="247dp"
            android:text="TND" />
    </RadioGroup>

    <TextView
        android:id="@+id/montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="348dp"
        android:text="Montant " />

    <EditText
        android:id="@+id/editMontant"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="175dp"
        android:layout_y="338dp"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="408dp"
        android:text="RÃ©sultat " />

    <TextView
        android:id="@+id/editResultat"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_x="175dp"
        android:layout_y="398dp"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCurrency"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="530dp"
        android:background="#2196F3"
        android:onClick="getCurrency"
        android:text="Convertir"
        android:textColor="#ffffff"
        app:backgroundTint="#2196F3"
        app:strokeColor="#2196F3" />



</AbsoluteLayout>